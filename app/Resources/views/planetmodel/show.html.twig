{% extends 'base.html.twig' %}

{% block body %}
    <h1>Planetmodel</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ planetModel.id }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ planetModel.model }}</td>
            </tr>
            <tr>
                <th>Manufacturer</th>
                <td>{{ planetModel.manufacturer }}</td>
            </tr>
            <tr>
                <th>Cruisespeed</th>
                <td>{{ planetModel.cruiseSpeed }}</td>
            </tr>
            <tr>
                <th>Planenbseats</th>
                <td>{{ planetModel.planeNbSeats }}</td>
            </tr>
            <tr>
                <th>Isavailable</th>
                <td>{% if planetModel.isAvailable %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('planetmodel_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('planetmodel_edit', { 'id': planetModel.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
